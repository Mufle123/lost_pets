<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AuthButtonsStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text16sp</item>
        <item name="backgroundTint">@color/secondLight</item>
        <item name="android:background">@drawable/button_secondary</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/error_text_color</item>
    </style>

    <style name="RegisterTypeButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:paddingLeft">@dimen/margin_24dp</item>
        <item name="android:paddingRight">@dimen/margin_24dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">@dimen/size16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="rippleColor">@color/transparentColor</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_color_secondary</item>
        <item name="android:textSize">@dimen/size16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CornerSize50Percent" >
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>
</resources>